<?php
// Kết nối database 
require_once 'config.php';

// Xử lý các action
$action = $_GET['action'] ?? 'list';

// Kết nối database
try {
    $db = new PDO("mysql:host=$db_host;dbname=$db_name;charset=utf8mb4", $db_user, $db_pass);
    $db->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
} catch (PDOException $e) {
    die("Kết nối database thất bại: " . $e->getMessage());
}

// Xử lý form thêm/sửa/xóa
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    if (isset($_POST['add_promo'])) {
        // Thêm promo code mới
        $stmt = $db->prepare("INSERT INTO promo_code 
                            (code, time_use, limited, discount, start_time, end_time, active) 
                            VALUES (?, 0, ?, ?, ?, ?, ?)");
        $stmt->execute([
            $_POST['code'],
            $_POST['limited'],
            $_POST['discount'],
            $_POST['start_time'],
            $_POST['end_time'],
            isset($_POST['active']) ? 1 : 0
        ]);
        $success = "Thêm promo code thành công!";
    } elseif (isset($_POST['edit_promo'])) {
        // Sửa promo code
        $stmt = $db->prepare("UPDATE promo_code SET 
                            code = ?,
                            limited = ?,
                            discount = ?,
                            start_time = ?,
                            end_time = ?,
                            active = ?
                            WHERE promo_code_id = ?");
        $stmt->execute([
            $_POST['code'],
            $_POST['limited'],
            $_POST['discount'],
            $_POST['start_time'],
            $_POST['end_time'],
            isset($_POST['active']) ? 1 : 0,
            $_POST['promo_code_id']
        ]);
        $success = "Cập nhật promo code thành công!";
    } elseif (isset($_POST['delete_promo'])) {
        // Xóa promo code
        $stmt = $db->prepare("DELETE FROM promo_code WHERE promo_code_id = ?");
        $stmt->execute([$_POST['promo_code_id']]);
        $success = "Xóa promo code thành công!";
    }
}

// Lấy danh sách promo codes
$promoCodes = $db->query("SELECT * FROM promo_code ORDER BY end_time DESC")->fetchAll(PDO::FETCH_ASSOC);

// Lấy thông tin promo code để edit (nếu có)
$editPromo = null;
if (isset($_GET['edit'])) {
    $stmt = $db->prepare("SELECT * FROM promo_code WHERE promo_code_id = ?");
    $stmt->execute([$_GET['edit']]);
    $editPromo = $stmt->fetch(PDO::FETCH_ASSOC);
}
?>

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý Promo Code - FashionMarket</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .promo-active {
            background-color: #e8f5e9;
        }

        .promo-expired {
            background-color: #ffebee;
        }
    </style>
</head>

<body>
    <div class="container mt-4">
        <h2 class="mb-4">Quản lý Promo Code</h2>

        <?php if (isset($success)): ?>
            <div class="alert alert-success"><?= $success ?></div>
        <?php endif; ?>

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <?= $editPromo ? 'Sửa Promo Code' : 'Thêm Promo Code Mới' ?>
                    </div>
                    <div class="card-body">
                        <form method="POST">
                            <?php if ($editPromo): ?>
                                <input type="hidden" name="promo_code_id" value="<?= $editPromo['promo_code_id'] ?>">
                            <?php endif; ?>

                            <div class="mb-3">
                                <label for="code" class="form-label">Mã Promo</label>
                                <input type="text" class="form-control" id="code" name="code"
                                    value="<?= $editPromo ? htmlspecialchars($editPromo['code']) : '' ?>" required>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="discount" class="form-label">Giảm giá (%)</label>
                                    <input type="number" step="0.01" min="0" max="100" class="form-control"
                                        id="discount" name="discount"
                                        value="<?= $editPromo ? $editPromo['discount'] : '0' ?>" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="limited" class="form-label">Giới hạn sử dụng (0 = không giới hạn)</label>
                                    <input type="number" min="0" class="form-control" id="limited" name="limited"
                                        value="<?= $editPromo ? $editPromo['limited'] : '0' ?>" required>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="start_time" class="form-label">Ngày bắt đầu</label>
                                    <input type="datetime-local" class="form-control" id="start_time" name="start_time"
                                        value="<?= $editPromo ? date('Y-m-d\TH:i', strtotime($editPromo['start_time'])) : '' ?>" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="end_time" class="form-label">Ngày kết thúc</label>
                                    <input type="datetime-local" class="form-control" id="end_time" name="end_time"
                                        value="<?= $editPromo ? date('Y-m-d\TH:i', strtotime($editPromo['end_time'])) : '' ?>" required>
                                </div>
                            </div>

                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="active" name="active"
                                    <?= ($editPromo && $editPromo['active']) || !$editPromo ? 'checked' : '' ?>>
                                <label class="form-check-label" for="active">Kích hoạt</label>
                            </div>

                            <button type="submit" name="<?= $editPromo ? 'edit_promo' : 'add_promo' ?>"
                                class="btn btn-primary">
                                <?= $editPromo ? 'Cập nhật' : 'Thêm mới' ?>
                            </button>

                            <?php if ($editPromo): ?>
                                <a href="promo_management.php" class="btn btn-secondary">Hủy</a>
                            <?php endif; ?>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Danh sách Promo Code
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Mã</th>
                                        <th>Giảm giá</th>
                                        <th>Đã dùng</th>
                                        <th>HSD</th>
                                        <th>Trạng thái</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <?php foreach ($promoCodes as $promo):
                                        $isActive = $promo['active'] && strtotime($promo['end_time']) > time();
                                        $rowClass = $isActive ? 'promo-active' : 'promo-expired';
                                    ?>
                                        <tr class="<?= $rowClass ?>">
                                            <td><strong><?= htmlspecialchars($promo['code']) ?></strong></td>
                                            <td><?= $promo['discount'] ?>%</td>
                                            <td><?= $promo['time_use'] ?>/<?= $promo['limited'] ?: '∞' ?></td>
                                            <td><?= date('d/m/Y', strtotime($promo['end_time'])) ?></td>
                                            <td>
                                                <?php if ($isActive): ?>
                                                    <span class="badge bg-success">Hoạt động</span>
                                                <?php else: ?>
                                                    <span class="badge bg-secondary">Hết hạn</span>
                                                <?php endif; ?>
                                            </td>
                                            <td>
                                                <a href="promo_management.php?edit=<?= $promo['promo_code_id'] ?>"
                                                    class="btn btn-sm btn-warning">Sửa</a>
                                                <form method="POST" style="display:inline;">
                                                    <input type="hidden" name="promo_code_id" value="<?= $promo['promo_code_id'] ?>">
                                                    <button type="submit" name="delete_promo"
                                                        class="btn btn-sm btn-danger"
                                                        onclick="return confirm('Xóa promo code này?')">Xóa</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <?php endforeach; ?>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>